<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="_rootNode"
      alignment="CENTER"
      prefHeight="400.0"
      prefWidth="640.0"
      fx:controller="com.drisq.minimalGraphicsProject.fx.PrimaryWindowController">
   <properties xmlns="http://javafx.com/javafx/8">
      <controller>
         <fx:reference source="controller"/>
      </controller>
   </properties>
   <children>
      <ImageView fx:id="passwordScreenLogo"
                 fitHeight="150.0"
                 fitWidth="200.0"
                 pickOnBounds="true"
                 preserveRatio="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </ImageView>
      <HBox alignment="CENTER" prefHeight="414.0" prefWidth="640.0">
         <children>
            <Label fx:id="_passwordLabel" text="Password: ">
               <font>
                  <Font name="Verdana" size="13.0"/>
               </font>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </Label>
            <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0"/>
            <PasswordField fx:id="_passwordInputField"/>
            <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0"/>
            <Button fx:id="_enterPasswordButton"
                    mnemonicParsing="false"
                    onAction="#_launchEnterPasswordButton"
                    text="Enter">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
               <font>
                  <Font name="Verdana" size="13.0"/>
               </font>
            </Button>
            <Separator opacity="0.0"
                       orientation="VERTICAL"
                       prefHeight="240.0"
                       prefWidth="34.0"/>
         </children>
      </HBox>
   </children>
</VBox>
