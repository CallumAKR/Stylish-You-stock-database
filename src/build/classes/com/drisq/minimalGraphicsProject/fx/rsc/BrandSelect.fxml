<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="_rootNode"
      alignment="CENTER"
      prefHeight="1000.0"
      prefWidth="1000.0"
      fx:controller="com.drisq.minimalGraphicsProject.fx.BrandsSelectController">
   <properties xmlns="http://javafx.com/javafx/8">
      <controller>
         <fx:reference source="controller"/>
      </controller>
   </properties>
   <children>
      <ImageView fitHeight="150.0"
                 fitWidth="200.0"
                 pickOnBounds="true"
                 preserveRatio="true">
         <image>
            <Image url="@StylishYouMainLogo.png"/>
         </image>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </ImageView>
      <Separator opacity="0.0" prefHeight="100.0" prefWidth="200.0"/>
      <Button fx:id="_jackWillsButton"
              mnemonicParsing="false"
              onAction="#_launchJackWillsButton"
              prefHeight="100.0"
              prefWidth="100.0"
              text="Jack WIlls"/>
      <Separator opacity="0.0" prefHeight="100.0" prefWidth="200.0"/>
      <Button fx:id="_hollisterButton"
              mnemonicParsing="false"
              onAction="#_launchHollisterButton"
              prefHeight="100.0"
              prefWidth="100.0"
              text="Hollister"/>
      <Separator opacity="0.0" prefHeight="100.0" prefWidth="200.0"/>
      <Button fx:id="_zaraButton"
              mnemonicParsing="false"
              onAction="#_launchZaraButton"
              prefHeight="100.0"
              prefWidth="100.0"
              text="Zara"/>
      <Separator opacity="0.0" prefHeight="130.0" prefWidth="1000.0"/>
      <HBox alignment="BOTTOM_RIGHT"
            prefHeight="100.0"
            prefWidth="200.0"
            VBox.vgrow="ALWAYS">
         <children>
            <Separator opacity="0.0"
                       orientation="VERTICAL"
                       prefHeight="800.0"
                       prefWidth="870.0"/>
            <Button fx:id="_homeButton"
                    mnemonicParsing="false"
                    onAction="#_launchHomeButton"
                    text="Home">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
