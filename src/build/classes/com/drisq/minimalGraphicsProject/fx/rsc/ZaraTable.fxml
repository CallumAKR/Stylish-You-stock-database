<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="_rootNode"
      alignment="CENTER"
      prefHeight="1000.0"
      prefWidth="1000.0"
      fx:controller="com.drisq.minimalGraphicsProject.fx.MensTableController">
   <properties xmlns="http://javafx.com/javafx/8">
      <controller>
         <fx:reference source="controller"/>
      </controller>
   </properties>
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Separator opacity="0.0"
                       orientation="VERTICAL"
                       prefHeight="170.0"
                       prefWidth="196.0"/>
            <ImageView fitHeight="150.0"
                       fitWidth="200.0"
                       pickOnBounds="true"
                       preserveRatio="true">
               <image>
                  <Image url="@StylishYouMainLogo.png"/>
               </image>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </HBox.margin>
            </ImageView>
            <Separator opacity="0.0"
                       orientation="VERTICAL"
                       prefHeight="170.0"
                       prefWidth="2.0"/>
            <Label prefHeight="150.0" prefWidth="200.0" text="Zara"/>
         </children>
      </HBox>
      <TableView fx:id="_zaraTable" prefHeight="1000.0" prefWidth="1000.0">
        <columns>
            <TableColumn fx:id="_zaraDescriptionColumn"
                         prefWidth="333.0"
                         text="Product Description"/>
            <TableColumn fx:id="_zaraQuantityColumn"
                         minWidth="0.0"
                         prefWidth="333.0"
                         text="Qty"/>
            <TableColumn fx:id="_zaraAvailableColumn"
                         minWidth="0.0"
                         prefWidth="333.0"
                         text="Available"/>
        </columns>
      </TableView>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="_backButton"
                    mnemonicParsing="false"
                    onAction="#_launchBackButton"
                    text="Back">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
            </Button>
            <Separator opacity="0.0"
                       orientation="VERTICAL"
                       prefHeight="800.0"
                       prefWidth="870.0"/>
            <Button fx:id="_homeButton"
                    mnemonicParsing="false"
                    onAction="#_launchHomeButton"
                    text="Home">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
